                <% for (let feedback of feedbacks ) { %>
                    <div data-aos="zoom-out" class="border-2 rounded-md bg-white p-2 md:p-4 md:w-[20%] w-[45%] h-fit relative">
                        <div class="flex justify-start items-center">
                            <img class="rounded-full w-[11%] md:w-[10%] me-1 md:me-4" src="<%= feedback.img %>" alt="<%= feedback.img %>">
                            <p class="font-medium text-xs md:text-base"><%= feedback.name %></p>
                            <img class="w-[10%] md:w-[8%] absolute right-2 md:right-4" src="/img/x.png" alt="...">
                        </div>
                        <div>
                            <p class="text-xs md:text-sm mt-4 font-medium text-justify text-[#5D646D]"><%= feedback.message %></p>
                        </div>
                    </div>
                <% } %>
            </div>
            <div id="shadow" class="absolute inset-0 md:hidden" style="background: rgb(255,255,255);
            background: linear-gradient(0deg, rgba(255,255,255,1) 10%, rgba(255,255,255,0) 100%);">
            </div>
            <div id="btn-see-more" class="p-1 px-3 rounded-md border-2 border-[#BCC6D2] scale-90 md:scale-100 absolute md:hidden right-[38%] bottom-5 qursor-pointer">
                <a class="text-[#4A4A4A] font-semibold duration-300"></i>See More</a>
            </div>
        </div>
    </section>

    <section class="bg-[#FFFFFF] md:bg-[#F6F6F6] py-20">
        <div class="mx-auto container">
            <p class="text-3xl md:text-4xl font-medium text-center block">Develop like a whole <span class="text-[#DB1A5A] block md:inline">IT Department 🤙</span></p>
